# Maintainer: colemickens <cole.mickens@gmail.com>

pkgname=kubelet-bin
pkgdesc="Kubernetes.io kubelet binary"
pkgver=1.13.0
pkgrel=1
arch=('x86_64')
url="http://kubernetes.io"
license=('apache')
conflicts=('kubernetes')
source_x86_64=(
  'https://packages.cloud.google.com/apt/pool/kubelet_1.13.0-00_amd64_f428332552df40f60aa9e1be21632406279dd3d7f64528c4f9058e8fe78eb119.deb'
  'kubelet.service'
)
sha256sums_x86_64=(
  'f428332552df40f60aa9e1be21632406279dd3d7f64528c4f9058e8fe78eb119'
  'af277acd2b60f67b616f45e7c4a2ed46eba664a22c285a2bf76cc300501aad40'
)

package() {
  tar -vxf data.tar.xz
  install -D -m0644 "${srcdir}/kubelet.service" "${pkgdir}/usr/lib/systemd/system/kubelet.service"
  install -D -m0755 "./usr/bin/kubelet" "${pkgdir}/usr/bin/kubelet"
}
