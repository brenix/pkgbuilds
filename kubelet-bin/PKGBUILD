# Maintainer: colemickens <cole.mickens@gmail.com>

pkgname=kubelet-bin
pkgdesc="Kubernetes.io kubelet binary"
pkgver=1.13.3
pkgrel=1
arch=('x86_64')
url="http://kubernetes.io"
license=('apache')
conflicts=('kubernetes')
source_x86_64=(
  'https://packages.cloud.google.com/apt/pool/kubelet_1.13.3-00_amd64_48d32f5aa84b897343500c9d2a4d283e46e230e7916902dffa2cdad34efd9b1b.deb'
  'kubelet.service'
)
sha256sums_x86_64=(
  '48d32f5aa84b897343500c9d2a4d283e46e230e7916902dffa2cdad34efd9b1b'
  'af277acd2b60f67b616f45e7c4a2ed46eba664a22c285a2bf76cc300501aad40'
)

package() {
  tar -vxf data.tar.xz
  install -D -m0644 "${srcdir}/kubelet.service" "${pkgdir}/usr/lib/systemd/system/kubelet.service"
  install -D -m0755 "./usr/bin/kubelet" "${pkgdir}/usr/bin/kubelet"
}
