# Maintainer: colemickens <cole.mickens@gmail.com>

pkgname=kubelet-bin
pkgdesc="Kubernetes.io kubelet binary"
pkgver=1.12.1
pkgrel=1
arch=('x86_64')
url="http://kubernetes.io"
license=('apache')
conflicts=('kubernetes')
source_x86_64=(
  'https://packages.cloud.google.com/apt/pool/kubelet_1.12.1-02_amd64_f9e23736e1a548c5fbef2b40438fca40a7008ad006ae4c9479cca331b7889f40.deb'
  'kubelet.service'
)
sha256sums_x86_64=(
  'f9e23736e1a548c5fbef2b40438fca40a7008ad006ae4c9479cca331b7889f40'
  'af277acd2b60f67b616f45e7c4a2ed46eba664a22c285a2bf76cc300501aad40'
)

package() {
  tar -vxf data.tar.xz
  install -D -m0644 "${srcdir}/kubelet.service" "${pkgdir}/usr/lib/systemd/system/kubelet.service"
  install -D -m0755 "./usr/bin/kubelet" "${pkgdir}/usr/bin/kubelet"
}
