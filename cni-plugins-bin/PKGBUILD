pkgname=cni-plugins-bin
pkgver=0.7.1
pkgrel=1
pkgdesc="Some standard networking plugins, maintained by the CNI team"
arch=('x86_64')
url="https://github.com/containernetworking/plugins"
license=('Apache')
optdepends=('cni')
depends=('glibc')
source=("https://github.com/containernetworking/plugins/releases/download/v${pkgver}/cni-plugins-amd64-v${pkgver}.tgz")
sha256sums=('6ecc5c7dbb8e4296b0d0d017e5440618e19605b9aa3b146a2c29af492f299dc7')

package() {
  cd "${srcdir}"
  install -Dm755 bridge ${pkgdir}/opt/cni/bin/bridge
  install -Dm755 dhcp ${pkgdir}/opt/cni/bin/dhcp
  install -Dm755 flannel ${pkgdir}/opt/cni/bin/flannel
  install -Dm755 host-device ${pkgdir}/opt/cni/bin/host-device
  install -Dm755 host-local ${pkgdir}/opt/cni/bin/host-local
  install -Dm755 ipvlan ${pkgdir}/opt/cni/bin/ipvlan
  install -Dm755 loopback ${pkgdir}/opt/cni/bin/loopback
  install -Dm755 macvlan ${pkgdir}/opt/cni/bin/macvlan
  install -Dm755 portmap ${pkgdir}/opt/cni/bin/portmap
  install -Dm755 ptp ${pkgdir}/opt/cni/bin/ptp
  install -Dm755 sample ${pkgdir}/opt/cni/bin/sample
  install -Dm755 tuning ${pkgdir}/opt/cni/bin/tuning
  install -Dm755 vlan ${pkgdir}/opt/cni/bin/vlan
}